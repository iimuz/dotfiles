[alias]
  lg = log --color --graph --oneline --decorate=full --branches --tags --remotes

[color]
  ui = auto

[core]
  editor = nvim
  quotepath = false
  autocrlf = input

[credential]
  helper = manager

[credential "https://github.com"]
  helper =
  helper = !credential-gh-helper

[credential "https://gist.github.com"]
	helper =
  helper = !credential-gh-helper

[delta]
  line-numbers = true
  minus-style = "syntax #340001"
  navigate = true
  plus-style = "syntax #012800"
  side-by-side = true
  syntax-theme = Monokai Extended

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" \"$LOCAL\" \"$REMOTE\""

[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f

[interactive]
    diffFilter = delta --color-only

[merge]
  tool = nvimdiff

[mergetool]
  keepBackup = false

[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\""

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[include]
  path = ~/.gitconfig.local
