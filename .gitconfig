[alias]
  lg = log --graph --oneline --decorate=full --branches --tags --remotes

[core]
  editor = vim
  quotepath = false

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[include]
  path = .gitconfig.local

[includeIf "gitdir:~/src/github.com/"]
  path = .gitconfig.github

[includeIf "gitdir:~/src/gitlab.com/"]
  path = .gitconfig.gitlab

[merge]
  tool = vimdiff

[mergetool]
  keepBackup = false
