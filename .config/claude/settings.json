{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(gemini:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(wc:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(git checkout:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git switch:*)",
      "Bash(mongod:*)",
      "Bash(mysql:*)",
      "Bash(nc:*)",
      "Bash(npm remove:*)",
      "Bash(npm uninstall:*)",
      "Bash(psql:*)",
      "Bash(rm -f:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Read(**/*key*)",
      "Read(**/*token*)",
      "Read(.env.*)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Write(**/secrets/**)",
      "Write(.env*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline"
  },
  "alwaysThinkingEnabled": true
}
