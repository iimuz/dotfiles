{
  "editor.rulers": [79, 88, 100], // pep8: 79, black: 88
  "diffEditor.renderSideBySide": false,
  "editor.accessibilitySupport": "off",
  "editor.cursorStyle": "line",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Cica, Consolas, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.formatOnSave": false,
  "editor.insertSpaces": false,
  "editor.largeFileOptimizations": false,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.stickyScroll.enabled": true,
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "explorer.autoReveal": true,
  "explorer.autoRevealExclude": {
    "**/.bundle": true,
    "**/.git/**": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/.vscode": true,
    "**/__pycache__/**": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  "files.autoGuessEncoding": true,
  "files.autoSave": "onWindowChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.bundle": true,
    "**/.git/**": true,
    "**/.mypy_cache/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/node_modules/**": true
  },
  "git.ignoreLegacyWarning": true,
  "git.openRepositoryInParentFolders": "always",
  "git.terminalAuthentication": false,
  "search.exclude": {
    "**/.bundle": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },
  "search.useIgnoreFiles": true,
  "terminal.integrated.fontFamily": "Cica, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 16,
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": false,
  "workbench.editor.limit.value": 16,
  "workbench.editor.showIcons": true,
  "workbench.editor.showTabs": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.view.experimental.allowMovingToNewContainer": true,
  // === remote development
  "remote.containers.gitCredentialHelperConfigLocation": "none",
  // === gitlens extension
  "gitlens.advanced.messages": {
    "suppressGitVersionWarning": true
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,
  // === neovim extension
  // リモートのneovimを利用する際に有効化する。通常は向こうで良い。
  // "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },
  "vscode-neovim.neovimInitVimPaths.win32": "~/AppData/Local/nvim/init.vim",
  "vscode-neovim.useCtrlKeysForInsertMode": false, // insert modeは完全にvscodeの挙動
  "vscode-neovim.useCtrlKeysForNormalMode": true, // normal modeはnevom挙動
  // === sqltools extension
  "sqltools.useNodeRuntime": true,
  // === vim + vspacecode extension
  // "vim.autoindent": true,
  // "vim.easymotion": true,
  // "vim.foldfix": true,
  // "vim.hlsearch": true,
  // "vim.leader": ",",
  // "vim.normalModeKeyBindingsNonRecursive": [
  //   {
  //     "before": ["<space>"],
  //     "commands": ["vspacecode.space"]
  //   },
  //   {
  //     "before": ["-"],
  //     "commands": [
  //       "vspacecode.space",
  //       {
  //         "command": "whichkey.triggerKey",
  //         "args": "m"
  //       }
  //     ]
  //   },
  //   { "before": ["j"], "after": ["g", "j"] },
  //   { "before": ["k"], "after": ["g", "k"] }
  // ],
  // "vim.visualModeKeyBindingsNonRecursive": [
  //   {
  //     "before": ["<space>"],
  //     "commands": ["vspacecode.space"]
  //   },
  //   {
  //     "before": ["-"],
  //     "commands": [
  //       "vspacecode.space",
  //       {
  //         "command": "whichkey.triggerKey",
  //         "args": "m"
  //       }
  //     ]
  //   }
  // ],
  // "vim.useCtrlKeys": true,
  // "vim.useSystemClipboard": true,
  // "vim.visualstar": true,
  // === yaml extension
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  // === html
  "[html]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "Glavin001.unibeautify-vscode"
  },
  // === json
  "[json]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // === julia
  "julia.enableTelemetry": false,
  "julia.symbolCacheDownload": true,
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
  "[julia]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // === jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.generateSVGPlots": true,
  "jupyter.interactiveWindowMode": "perFile",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // === markdown
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "markdown-preview-enhanced.scrollSync": false,
  "[markdown]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100],
    // 折り返し有効時には、rulerの位置で折り返す
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent"
    // 範囲選択 + 'gq' で強制的に折り返す処理をするための設定(vim拡張が必要)
    // "vim.textwidth": 100
  },
  // === python
  "autoDocstring.docstringFormat": "numpy",
  "python.dataScience.askForKernelRestart": false,
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.pycodestyleEnabled": false,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": false,
  "[python]": {
    "outline.showVariables": false,
    "editor.defaultFormatter": "ms-python.python",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [
      79,
      88
    ],
    "editor.formatOnType": true // pep8: 79, black: 88
  },
  // === reStructuredText
  "[reStructerdText]": {},
  // === rust
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust",
    "editor.tabSize": 4
  },
  // === tex
  "[tex]": {
    "editor.insertSpaces": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.tabSize": 2
  },
  "[latex]": {
    "editor.insertSpaces": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.tabSize": 2
  },
  "[bibtex]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.chktex.run": "onSave",
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": ["-silent", "-outdir=%OUTDIR%", "%DOC%"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  // === typescript
  "[typescript]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
