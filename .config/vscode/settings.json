{
  "diffEditor.renderSideBySide": false,
  "editor.rulers": [79, 88, 100], // pep8: 79, black: 88
  "editor.accessibilitySupport": "off",
  "editor.cursorStyle": "line",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Cica, Consolas, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.formatOnSave": false,
  "editor.insertSpaces": false,
  "editor.largeFileOptimizations": false,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.stickyScroll.enabled": true,
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "explorer.autoReveal": true,
  "explorer.autoRevealExclude": {
    "**/.bundle": true,
    "**/.git/**": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/.vscode": true,
    "**/__pycache__/**": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 1,
  "files.autoGuessEncoding": true,
  "files.autoSave": "onWindowChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.bundle": true,
    "**/.git/**": true,
    "**/.mypy_cache/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/node_modules/**": true
  },
  "git.ignoreLegacyWarning": true,
  "git.openRepositoryInParentFolders": "always",
  "git.terminalAuthentication": false,
  "search.exclude": {
    "**/.bundle": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },
  "search.useIgnoreFiles": true,
  "terminal.integrated.fontFamily": "Cica, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 15,
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": false,
  "workbench.editor.limit.value": 16,
  "workbench.editor.showIcons": true,
  "workbench.editor.showTabs": "single",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  // === Extension: autoTimeStamp(lpubsppop01.vscode-auto-timestamp)
  "lpubsppop01.autoTimeStamp.filenamePattern": ".(md|adoc)",
  "lpubsppop01.autoTimeStamp.lineLimit": 10,
  "lpubsppop01.autoTimeStamp.modifiedTimeStart": "lastmod: ",
  "lpubsppop01.autoTimeStamp.momentFormat": "YYYY-MM-DDTHH:mm:ss+09:00",
  // === Extension: draw.io
  "hediet.vscode-drawio.resizeImages": null,
  // === Extension: frontMatter(eliostruyf.vscode-front-matter)
  "frontMatter.content.autoUpdateDate": false, // autoTimeStamp拡張を利用する
  "frontMatter.content.fmHighlight": false,
  "frontMatter.dashboard.content.pagination": 52, // dashboardで1ページあたりの表示数を最大にする
  "frontMatter.dashboard.openOnStart": false,
  // === Extension: github PR(GitHub.vscode-pull-request-github)
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user}"
    }
  ],
  "githubPullRequests.pullBranch": "never",
  // === Extension: gitlens(eamodio.gitlens)
  "gitlens.advanced.messages": {
    "suppressGitVersionWarning": true
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,
  // === Extension: insertDateString(jsynowiec.vscode-insertdatestring)
  "insertDateString.format": "YYYY-MM-DD hh:mm:ss",
  "insertDateString.formatDate": "YYYY-MM-DD",
  "insertDateString.formatTime": "hh:mm",
  // === Extension: neovim(asvetliakov.vscode-neovim)
  // リモートのneovimを利用する際に有効化する。通常は無効で良いのだが、通常利用でも設定を勧められたので有効化してみる。
  "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },
  "vscode-neovim.neovimInitVimPaths.win32": "~/AppData/Local/nvim/init.vim",
  "vscode-neovim.useCtrlKeysForInsertMode": false, // insert modeは完全にvscodeの挙動
  "vscode-neovim.useCtrlKeysForNormalMode": true, // normal modeはnevom挙動
  // === Extension: pasteImage (拡張機能を無効化中)
  // "pasteImage.path": "${projectRoot}/static/imgs/${currentFileNameWithoutExt}",
  // "pasteImage.basePath": "${projectRoot}",
  // === Extension: RedHat
  "redhat.telemetry.enabled": false, // 情報を送らない
  // === Extension: remote development(ms-vscode-remote.vscode-remote-extensionpack)
  // "remote.containers.gitCredentialHelperConfigLocation": "none",  // gredential managerに移行したので不要になったはず。暫定で消す。
  // === Extension: sqltools(mtxr.sqltools)
  "sqltools.useNodeRuntime": true,
  // === Extension: yaml(redhat.vscode-yaml)
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  // === Language: asciidoc
  "asciidoc.use_asciidoctor_js": true,
  "asciidoc.preview.useEditorStyle": false,
  "[asciidoc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.rulers": [100],
    // 折り返し有効時には、rulerの位置で折り返す
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent"
  },
  // === Language: docker-compose
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  // === Language: go
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  // === Language: html
  "[html]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "Glavin001.unibeautify-vscode",
    "editor.tabSize": 2
  },
  // === Language: json
  "[json][jsonc]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  // === Language: julia
  "julia.enableTelemetry": false,
  "julia.symbolCacheDownload": true,
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
  "[julia]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // === Language(?): jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // === Language: makefile
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  // === Language: markdown
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "markdown-preview-enhanced.scrollSync": false,
  "markdown-preview-github-styles.colorTheme": "light",
  "[markdown]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100],
    // 折り返し有効時には、rulerの位置で折り返す
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent"
  },
  // === Language: python
  "autoDocstring.docstringFormat": "numpy",
  "python.languageServer": "Pylance",
  "[python]": {
    "outline.showVariables": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [79, 88],
    "editor.formatOnType": true
  },
  // === Language: reStructuredText
  "[reStructerdText]": {},
  // === Language: rust
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },
  // === Language: tex
  "[tex][latex]": {
    "editor.insertSpaces": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.tabSize": 2
  },
  "[bibtex]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.chktex.run": "onSave",
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": ["-silent", "-outdir=%OUTDIR%", "%DOC%"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  // === Language: typescript
  "[typescript][typescriptreact]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
