{
  "diffEditor.renderSideBySide": false, // 差分表示で画面を分割しない
  "editor.rulers": [79, 88, 100], // pep8: 79, black: 88
  "editor.accessibilitySupport": "off",
  "editor.cursorStyle": "line",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Cica, 'Hack Nerd Font Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  // "editor.fontSize": 18, // Default
  "editor.fontSize": 20, // LG Display
  "editor.formatOnSave": false,
  "editor.insertSpaces": false,
  "editor.largeFileOptimizations": false,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.stickyScroll.enabled": true,
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  // ビューもしくは `wordWrapColumn` で折り返す
  // `wordWrapColumn` はデフォルトで80なので、ビューよりも小さくなりやすい。
  // 予め大きめに設定しておく。
  "editor.wordWrap": "bounded", // ビューもしくは `wordWrapColumn` で折り返す
  "editor.wordWrapColumn": 180,
  "explorer.autoReveal": true,
  "explorer.autoRevealExclude": {
    "**/.bundle": true,
    "**/.git/**": true,
    "**/.mypy_cache": true,
    "**/.obsidian": true,
    "**/.venv": true,
    "**/.vscode": true,
    "**/__pycache__/**": true,
    "**/*.egg-info/**": true,
    "**/cdk.out": true,
    "**/bower_components": true,
    "**/node_modules": true,
    "**/ruff_cache": true,
    "**/target": true // rusb build
  },
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 1,
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.bundle": true,
    "**/.git/**": true,
    "**/.mypy_cache/**": true,
    "**/.obsidian/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/*.egg-info/**": true,
    "**/cdk.out/**": true,
    "**/node_modules/**": true,
    "**/ruff_cache/**": true,
    "**/target/**": true // rust build
  },
  "git.ignoreLegacyWarning": true,
  "git.openRepositoryInParentFolders": "always",
  "git.terminalAuthentication": false,
  "search.exclude": {
    "**/.bundle": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/.obsidian": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "**/cdk.out": true,
    "**/node_modules": true,
    "**/ruff_cache": true,
    "**/target": true // rust build
  },
  "search.searchEditor.focusResultsOnSearch": true,
  "search.useIgnoreFiles": true,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.fontFamily": "Cica, 'Hack Nerd Font Mono', Consolas, 'Courier New', monospace",
  // "terminal.integrated.fontSize": 20, // Default
  "terminal.integrated.fontSize": 22, // LG Display
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.macOptionIsMeta": false,
  "window.commandCenter": false,
  "workbench.activityBar.location": "top",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": false,
  "workbench.editor.limit.value": 32,
  "workbench.editor.showIcons": true,
  "workbench.editor.showTabs": "single",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.stickyScrollMaxItemCount": 7,
  // === Extension: autoTimeStamp(lpubsppop01.vscode-auto-timestamp)
  "lpubsppop01.autoTimeStamp.filenamePattern": ".(md|adoc)",
  "lpubsppop01.autoTimeStamp.lineLimit": 10,
  "lpubsppop01.autoTimeStamp.modifiedTimeStart": "lastmod: ",
  "lpubsppop01.autoTimeStamp.momentFormat": "YYYY-MM-DDTHH",
  // === Extension: AWS Toolkit(AmazonWebServices.aws-toolkit-vscode)
  "aws.telemetry": false,
  // === Extension: code-runner(formulahendry.code-runner)
  "code-runner.preserveFocus": true,
  "code-runner.runInTerminal": false,
  "code-runner.enableAppInsights": false,
  "code-runner.fileDirectoryAsCwd": true,
  // === Extension: draw.io(hediet.vscode-drawio)
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "Kennedy",
  // === Extension: find-it-faster(TomRijndorp.find-it-faster)
  "find-it-faster.general.hideTerminalAfterFail": true,
  "find-it-faster.general.showMaximizedTerminal": false,
  "find-it-faster.general.useTerminalInEditor": true,
  // === Extension: frontMatter(eliostruyf.vscode-front-matter)
  "frontMatter.content.autoUpdateDate": false, // autoTimeStamp拡張を利用する
  "frontMatter.content.fmHighlight": false,
  "frontMatter.dashboard.content.pagination": 52, // dashboardで1ページあたりの表示数を最大にする
  "frontMatter.dashboard.openOnStart": false,
  // === Extension: GitHub Copilot(GitHub.copilot)
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.localeOverride": "ja",
  // === Extension: GitHub Copilot Chat(GitHub.copilot-chat)
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  // === Extension: github PR(GitHub.vscode-pull-request-github)
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user}"
    }
  ],
  "githubPullRequests.pullBranch": "never",
  // === Extension: gitlens(eamodio.gitlens)
  // 2024-11-06: 利用していないので無効化
  // "gitlens.advanced.messages": {
  //   "suppressGitVersionWarning": true
  // },
  // "gitlens.codeLens.authors.enabled": false,
  // "gitlens.codeLens.recentChange.enabled": false,
  // "gitlens.currentLine.enabled": false,
  // === Extension: indent-rainbow(oderwat.indent-rainbow)
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  // indicatorStyleを"light"にする場合は、設定した方が見やすい
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  // === Extension: insertDateString(jsynowiec.vscode-insertdatestring)
  "insertDateString.format": "YYYY-MM-DD hh:mm:ss",
  "insertDateString.formatDate": "YYYY-MM-DD",
  "insertDateString.formatTime": "hh:mm",
  // === Extension: markdown preview enhanced(shd101wyy.markdown-preview-enhanced)
  "markdown-preview-enhanced.liveUpdate": true,
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "markdown-preview-enhanced.scrollSync": false,
  "markdown-preview-enhanced.enablePreviewZenMode": false,
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  // === Extension: open in vim(jonsmithers.open-in-vim)
  // 2024-11-06: vscode-vimを利用するようにしたため無効化
  // "open-in-vim.useNeovim": true,
  // === Extension: neovim(asvetliakov.vscode-neovim)
  // 2024-11-06: vscode-vimを利用するようにしたため無効化
  // リモートのneovimを利用する際に有効化する。通常は無効で良いのだが、通常利用でも設定を勧められたので有効化してみる。
  // "extensions.experimental.affinity": {
  //   "asvetliakov.vscode-neovim": 1
  // },
  // "vscode-neovim.neovimInitVimPaths.win32": "~/AppData/Local/nvim/init.vim",
  // "vscode-neovim.useCtrlKeysForInsertMode": false, // insert modeは完全にvscodeの挙動
  // "vscode-neovim.useCtrlKeysForNormalMode": true, // normal modeはnevom挙動
  // === Extension: pasteImage
  // 拡張機能を無効化
  // "pasteImage.path": "${projectRoot}/static/imgs/${currentFileNameWithoutExt}",
  // "pasteImage.basePath": "${projectRoot}",
  // === Extension: Project Manager
  "projectManager.git.baseFolders": ["$home/src"],
  "projectManager.git.maxDepthRecursion": 3,
  // === Extension: RedHat
  "redhat.telemetry.enabled": false,
  // === Extension: sqltools(mtxr.sqltools)
  // SQLToolsを利用していないので無効k
  // "sqltools.useNodeRuntime": true,
  // === Extension: vscodevim.vim
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  // === Extension: VSpaceCode
  // 以下は、VSpaceCodeが自動で行った設定。
  // vim拡張を利用しており、vim拡張に対して変更を加えている。
  "vim.easymotion": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  // === Extension: yaml(redhat.vscode-yaml)
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  // === Language: asciidoc
  "asciidoc.preview.useEditorStyle": false,
  "[asciidoc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.rulers": [100],
    // 折り返し有効時には、rulerの位置で折り返す
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent"
  },
  // === Language: docker-compose
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // === Language: go
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  // === Language: html
  "[html]": {
    "editor.defaultFormatter": "Glavin001.unibeautify-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // === Language: json
  "[json][jsonc][jsonl]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // === Language: julia
  "julia.enableTelemetry": false,
  "julia.symbolCacheDownload": true,
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
  "[julia]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // === Language(?): jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // === Language: makefile
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  // === Language: markdown
  "markdown-preview-github-styles.colorTheme": "light",
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "[markdown]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100],
    // 折り返し有効時には、rulerの位置で折り返す
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent"
  },
  // === Language: python
  "autoDocstring.docstringFormat": "numpy",
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [79, 88],
    "outline.showVariables": false
  },
  // === Language: reStructuredText
  "[reStructerdText]": {},
  // === Language: rust
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },
  // === Language: tex
  "[tex][latex]": {
    "editor.insertSpaces": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.tabSize": 2
  },
  "[bibtex]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // === Language: toml
  "[toml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // === Language: typescript
  "[typescript][typescriptreact]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "lldb.suppressUpdateNotifications": true,
  "remote.SSH.remotePlatform": {
    "aws-ec2-ml-dev": "linux"
  },
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "Noctis"
}