{
  "name": "scratchpad",
  "dockerComposeFile": "docker-compose.yml",
  "service": "vscode",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "extensions": [
    "alefragnani.bookmarks",
    "davidanson.vscode-markdownlint",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "mechatroner.rainbow-csv",
    "ms-python.python",
    "njpwerner.autodocstring",
    "shd101wyy.markdown-preview-enhanced",
    "shuworks.vscode-table-formatter"
  ],
  "settings": {
    "autoDocstring.docstringFormat": "google",
    "editor.formatOnSave": true,
    "files.exclude": {
      "**/.DS_Store": true
    },
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
      "**/.git/**": true,
      "**/.mypy_cache/**": true,
      "**/.venv/**": true,
      "**/__pycache__/**": true,
      "**/node_modules/**": true
    },
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "markdown-preview-enhanced.mermaidTheme": "forest",
    "markdown-preview-enhanced.previewTheme": "solarized-light.css",
    "markdown-preview-enhanced.scrollSync": false,
    "python.dataScience.jupyterServerURI": "http://localhost:8888",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
      "--max-complexity",
      "20",
      "--max-line-length",
      "88"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pep8Enabled": false,
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "/opt/conda/bin/python",
    "search.exclude": {
      "**/.DS_Store": true,
      "**/.git": true,
      "**/.mypy_cache": true,
      "**/.venv": true,
      "**/__pycache__": true,
      "**/node_modules": true
    },
    "workbench.colorCustomizations": {
      "activityBar.background": "#333366"
    },
    "[markdown]": {
      "editor.tabSize": 2
    }
  }
}
